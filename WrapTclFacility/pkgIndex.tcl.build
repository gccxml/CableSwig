package ifneeded WrapTclFacility 1.0 {
  global tcl_platform
  if {$tcl_platform(platform) == "unix"} {
    set libPrefix "lib"
  } else {
    set libPrefix ""
  }

  set libPath [file join "${CABLE_WRAPTCLFACILITY_DIR}" "${CABLE_MSDEV_CONFIG_DIR}"]
  set libName "WrapTclFacility"
  set libExt [info sharedlibextension]
  set libFile [file join $libPath "$libPrefix$libName$libExt"]

  if {[catch { load $libFile } errorMessage ]} {
    puts $errorMessage
  }
}
