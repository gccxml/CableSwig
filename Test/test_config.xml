<?xml version="1.0"?>
<Package name="Vect3">
  <Dependencies>
    <Package name="Numbers"/>
  </Dependencies>

  <Headers>
    <Directory name="Code/Common"/>
    <File name="itkVersion.h"/>
  </Headers>

  <Set name="Dimension">
    <Element tag="1">1</Element>
    <Element tag="2">2</Element>
    <Element tag="3">3</Element>
  </Set>

  <Set name="Integer">
    <Element tag="i">int</Element>
  </Set>

  <Set name="BasicScalarType">
    <Element tag="f">float</Element>
    <Set name="Integer"/>
  </Set>

  <CreateMethod name="New()">
    <![CDATA[ 
             _wrap_TypeName::Pointer newObject = _wrap_TypeName::New();
             newObject->Register();
             return newObject.GetPointer();
            ]]>
  </CreateMethod>
  
  <DeleteMethod name="Delete()">
    <![CDATA[
             static_cast<_wrap_TypeName*>(object)->Delete();
            ]]>
  </DeleteMethod>

  <Set name="ImageType">
    <Element tag="Image"><![CDATA[Image<$BasicScalarType, $Dimension> ]]></Element>
  </Set>

  <WrapperSet>
    <!-- 
      <Create method="New()"/>
      <Delete method="Delete()"/>
      -->
    <Set name="ImageType"/>
    <Element tag="Directory">Directory</Element>
    <Element tag="Pair"><![CDATA[pair<$ImageType, $BasicScalarType> ]]></Element>
  </WrapperSet>

</Package>
